#define bikini_last_register 0;

/* types ----------------------------------------------------------------------------------------*/

#ifndef __cplusplus

typedef float real;
typedef float1 real1;
typedef float2 real2;
typedef float3 real3;
typedef float4 real4;

#endif // __cplusplus

/* viewport -------------------------------------------------------------------------------------*/

struct viewport_info
{
	real4 area;		// x - left, y - top, z - width, w - height
	real2 depth;	// x - Z min, y - Z max
};

static const uint viewport_info_start = bikini_last_register;
static const uint viewport_info_size = 2;

#undef bikini_last_register
#define bikini_last_register	(viewport_info_start + viewport_info_size)

#ifndef __cplusplus

viewport_info viewport : register(c[viewport_info_start]) =
{
	0, 0, 800, 600,
	0, 1
};

#endif // __cplusplus

